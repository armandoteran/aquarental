<div class="container my-3">
  <div class="cards">
    <% @equipments.each do |eq| %>

      <div class="card-trip">
        <%= image_tag "#{eq.picture_url}", width: 200 %>
        <div class="card-trip-infos">
          <div>
            <div class="d-flex">
              <h2><%= eq.name %></h2>
              <p class="mb-1 ml-3"><%= link_to "show", equipment_path(eq) %></p>
            </div>
            <p><%= eq.description %></p>
          </div>
          <h2 class="card-trip-pricing"><%= "$#{eq.price_day}" %></h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>

    <% end %>
  </div>
</div>

