<div class="cards">
  <% @equipments.each do |eq| %>
    <div class="card">
      <p><%= eq.name %></p>
      <p><%= eq.description %></p>
      <p>Price per hour:<%= eq.price_hour %></p>
      <p>Price per day:<%= eq.price_day %></p>
      <p>State:<%= eq.state %></p>
      <%= image_tag "#{eq.picture_url}", width: 200 %>
      <%= link_to Book now, equipment_path(eq) %>
    </div>
  <% end %>
</div>


