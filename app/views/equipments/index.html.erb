<div class="container my-3">
  <div class="cards">
    <% @equipments.each do |eq| %>
      <% if current_user != eq.owner %>
        <%= link_to equipment_path(eq), class: "card-trip-link hvr-grow m-1" do %>
          <div class="card-trip">
            <%= image_tag "#{eq.picture_url}", width: 200 %>
            <div class="card-trip-infos">
              <div>
                <h2><%= eq.name.truncate(24) %></h2>
                <p><%= eq.description.truncate(28) %></p>
              </div>
              <h2 class="card-trip-pricing"><%= "$#{eq.price_day}/dia" %></h2>
              <img src="<%= eq.owner.img_url %>" class="card-trip-user avatar-bordered" />
              <% sqlq = "bookings.equipment_id = ?" %>
              <% reviews = Review.joins(:booking).where(sqlq, eq.id) %>
              <% rating_sum = 0 %>
              <% reviews.each do |review| %>
                rating_sum += review.rating
              <% end %>
              <% avg_rating = rating_sum.div(reviews.size) %>
              <p>Stars: <%= avg_rating %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
