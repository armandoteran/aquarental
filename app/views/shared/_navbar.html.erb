<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div>
    <ul class="navbar-nav mr-auto">
      <li>
        <%= link_to equipments_path do %>
          <button type="button" class="btn btn-outline-primary mb-0">
            <strong>Aqua</strong>RENTAL
          </button>
        <% end %>
      </li>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!-- Search Form with Pg_search-->
  <div class="container pl-0">
    <%= form_tag equipments_path, method: :get do %>
      <div class="d-flex">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Buscar equipo"
        %>
      <%= submit_tag "🔍", class: "btn btn-light pr-0" %>
      </div>
    <% end %>

  </div>
  <!-- -->

  <% if user_signed_in? %>
    <p class="mt-3 mr-3">Hola, <%= current_user.email %></p>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">

    <a href="/equipments/new" class="btn btn-ghost mr-3">
      Publicar equipo <i class="fa fa-plus-circle" aria-hidden="true"></i>
    </a>

      <!--
        <%#= link_to new_equipment_path,  { #class: "btn btn-ghost mr-3" } do %>
          Publicar equipo <i class="fa fa-plus-circle" aria-hidden="true"></i>
        <%# end %>
      -->


      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/armandoteran", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Mis reservas", bookings_path, class: "dropdown-item" %>
            <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "Iniciar sesion", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>

</div>
